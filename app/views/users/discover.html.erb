<h1>Discover Movies</h1>
<%= button_to 'Discover Top Rated Movies', "/users/#{@user.id}/movies", params: {q: 'top rated'}, method: :get %>

<h3> OR </h3>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: :true do |f| %>
  <%= f.text_field 'Search by Movie Title' %>
  <%= f.submit 'Search by Movie Title' %>
<% end %>