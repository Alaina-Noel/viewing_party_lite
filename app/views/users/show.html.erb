<h1>User Dashboard</h1>
<%= @user.name %>

<%= button_to 'Discover Movies', "/users/#{@user.id}/discover", method: :get %>

<h3> Viewing Parties </h3>

<% @user.parties.each do |party| %>
  <img src="<%= party.poster_path %>">
  <h2><%= link_to party.title, "/users/#{@user.id}/movies/#{party.movie_id}"%></h2>
  <% if party.host[:id] == @user.id %>
    <p> You are the host </p>
  <% else %>
    <p> <%= party.host[:name]%> is the host </p>
  <% end %>
  <p>Date: <%= party.date %></p>
  <p>Start time: <%= party.start_time %></p>
  <p>Attendees: <% party.users.each do |attendee| %>
                    <div id="user-<%= attendee.id %>">
                    <% if attendee.id == @user.id %>
                      <strong><%= attendee.name %></strong>
                    <% else %>
                      <%= attendee.name %>
                    <% end %>
                    </div>
                  <% end %>
<% end %>